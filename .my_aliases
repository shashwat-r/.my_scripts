alias net='watch -c -x zsh -ci connected'
function connected() {
    if nc -zw1 google.com 443; then
        echo "\n\033[0;32mInternet Connected\033[0m"
    else
        echo "\n\033[0;31mInternet Disconnected\033[0m"
    fi
}

